<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="ThÃ¨mes : " />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginLeft="@dimen/fab_margin">

        <TextView
            android:id="@+id/textView_themes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dfgdfghdfhdfhdfh"/>

        <ImageView
            android:id="@+id/img_PlusTheme"
            android:layout_width="32dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_plus"
            android:layout_gravity="right"
            android:clickable="true"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textViewPrix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Prix : " />

    <RadioGroup
        android:id="@+id/rg_Prix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginLeft="@dimen/fab_margin">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radioPrixFaible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_width="32dp"
                android:layout_height="30dp"
                android:src="@mipmap/euro"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radioPrixMoyen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_width="32dp"
                android:layout_height="30dp"
                android:src="@mipmap/euro"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_width="32dp"
                android:layout_height="30dp"
                android:src="@mipmap/euro"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radioPrixEleve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_width="32dp"
                android:layout_height="30dp"
                android:src="@mipmap/euro"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_width="32dp"
                android:layout_height="30dp"
                android:src="@mipmap/euro"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_width="32dp"
                android:layout_height="30dp"
                android:src="@mipmap/euro"
                android:layout_gravity="center"/>
        </LinearLayout>

    </RadioGroup>

    <TextView
        android:id="@+id/textViewLocalisation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Localisation" />

    <RadioGroup
        android:id="@+id/Localisation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginLeft="@dimen/fab_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioLocalisationCP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

            <EditText android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CP, Ville" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radioAutourDeMoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/textViewAutourDeMoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Autour de moi" />

        </LinearLayout>


    </RadioGroup>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_Recherche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:padding="12dp"
        android:text="REcherche"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_gravity="center"/>


</LinearLayout>